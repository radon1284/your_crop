<h1>Listing stores</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Store name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Region</th>
      <th>City town</th>
      <th>Brgy</th>
      <th>Zipcode</th>
      <th>Mobile phone</th>
      <th>Telephone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.user %></td>
        <td><%= store.store_name %></td>
        <td><%= store.address1 %></td>
        <td><%= store.address2 %></td>
        <td><%= store.region %></td>
        <td><%= store.city_town %></td>
        <td><%= store.brgy %></td>
        <td><%= store.zipcode %></td>
        <td><%= store.mobile_phone %></td>
        <td><%= store.telephone %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path %>
